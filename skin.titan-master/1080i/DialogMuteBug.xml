<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">901</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <animation type="WindowOpen" condition="!Window.IsActive(volumebar)">
                <effect type="slide" start="200,0" end="0,0" time="400" tween="cubic" easing="inout" delay="0" />
            </animation>
            <animation type="WindowClose" condition="!Window.IsActive(volumebar)">
                <effect type="slide" start="0,0" end="200,0" time="400" tween="cubic" easing="inout" delay="0" />
            </animation>

			
            <control type="group">
                <control type="image">
				<right>10</right>
				<top>-20</top>
				<width>200</width>
				<height>200</height>
                <texture>dialogs/volume/mute.png</texture>
				<aspectratio>keep</aspectratio>
                </control>
            </control>
        </control>
    </controls>
</window>
