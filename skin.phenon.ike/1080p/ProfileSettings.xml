<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">5</defaultcontrol>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1920</width>
			<height>1080</height>
			<texture background="true">black.png</texture>
			<animation effect="fade" start="0" end="87" time="300">WindowOpen</animation>
			<animation effect="fade" start="87" end="0" time="300">WindowClose</animation>
		</control>
		<!-- Heading -->
		<control type="label" id="2">
			<left>150</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>font-40</font>
			<align>center</align>
			<textcolor>white</textcolor>
			<label>-</label>
		</control>

		<!-- Image -->
		<control type="image" id="101">
			<left>50</left>
			<top>244</top>
			<width>256</width>
			<height>256</height>
			<aspectratio aligny="center">keep</aspectratio>
			<texture background="true">defaultuser.png</texture>
		</control>

		<!-- Grouplist -->
		<control type="grouplist" id="5">
			<left>350</left>
			<top>244</top>
			<width>1200</width>
			<height>720</height>
			<itemgap>0</itemgap>
			<onleft>9001</onleft>
			<onright>9001</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
		</control>

		<!-- default button -->
		<control type="button" id="7">
			<width>500</width>
			<height>66</height>
		</control>

		<!-- default radiobutton -->
		<control type="radiobutton" id="8">
			<width>1200</width>
			<height>66</height>
			<textwidth>1120</textwidth>
		</control>

		<!-- default spincontrolex -->
		<control type="spincontrolex" id="9">
			<width>1200</width>
			<height>66</height>
			<textwidth>1120</textwidth>
		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>600</left>
			<top>956</top>
			<width>1200</width>
			<itemgap>20</itemgap>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>5</onup>
			<ondown>noop</ondown>
			<defaultcontrol>28</defaultcontrol>
			<orientation>horizontal</orientation>

			<!-- OK Button -->
			<control type="button" id="28">
				<width>280</width>
				<label>186</label>
				<textcolor>darkgrey</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturefocus colordiffuse="$VAR[main_color]">white.png</texturefocus>
				<texturenofocus>dialogs/grey1.png</texturenofocus>
			</control>

			<!-- Cancel Button -->
			<control type="button" id="29">
				<width>280</width>
				<label>222</label>
				<textcolor>darkgrey</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturefocus colordiffuse="$VAR[main_color]">white.png</texturefocus>
				<texturenofocus>dialogs/grey1.png</texturenofocus>
			</control>

		</control>

	</controls>

</window>
