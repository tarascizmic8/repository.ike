<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>10</defaultcontrol>
	<controls>
		<include>fade_screen_grey</include>
		<control type="group">
			<posy>400</posy>
			<posx>400</posx>
			<include>dialog_zoom_animation</include>
			<include>ok_dialog</include>
			<control type="label" id="1">
				<description>heading label</description>
				<posx>0</posx>
				<posy>20</posy>
				<width>1120</width>
				<height>45</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>font-30</font>
				<label>-</label>
				<textcolor>white</textcolor>
			</control>
			<control type="textbox" id="9">
				<posx>10</posx>
				<posy>90</posy>
				<width>1100</width>
				<height>205</height>
				<align>center</align>
				<label>-</label>
				<font>font-20</font>
				<textcolor>grey_b</textcolor>
				<autoscroll time="2000" delay="8000" repeat="5000">!Skin.HasSetting(AutoScroll)</autoscroll>
			</control>
			<control type="button" id="10">
				<description>OK button</description>
				<posx>0</posx>
				<posy>250</posy>
				<width>1120</width>
				<height>52</height>
				<label>186</label>
				<font>font-24</font>
				<align>center</align>
				<focusedcolor>$VAR[main_color]</focusedcolor>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>10</onup>
				<ondown>10</ondown>
			</control>

		</control>
	</controls>
</window>
