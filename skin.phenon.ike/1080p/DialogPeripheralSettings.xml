<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- peripheralsettings -->
	<defaultcontrol>5</defaultcontrol>
	<controls>

		<!-- Background -->
		<control type="image">
			<posx>400</posx>
			<posy>100</posy>
			<width>1120</width>
			<height>880</height>
			<texture background="true" colordiffuse="grey_50">white.png</texture>
			<bordertexture colordiffuse="grey">white.png</bordertexture>	
			<bordersize>2</bordersize>
			<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
			<animation effect="fade" start="70" end="0" time="300">WindowClose</animation>
		</control>

		<!-- Heading label -->
		<control type="label">
			<left>0</left>
			<top>110</top>
			<align>center</align>
			<width>1920</width>
			<height>72</height>
			<font>font-40</font>
			<label>35000</label>
		</control>


		<!-- Grouplist -->
		<control type="grouplist" id="5">
			<left>400</left>
			<top>228</top>
			<width>1000</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>noop</onleft>
			<onright>9001</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
		</control>

		<!-- Default button -->
		<control type="button" id="7">
				<description>default Settings Button</description>
				<font>font-22</font>
				<align>left</align>
				<textwidth>900</textwidth>
				<textoffsetx>30</textoffsetx>
				<textcolor>darkgrey</textcolor>
				<focusedcolor>grey_b</focusedcolor>
				<texturefocus>dialogs/grey2.png</texturefocus>
				<texturenofocus>dialogs/grey1.png</texturenofocus>
				<invalidcolor>grey_a</invalidcolor>
				<disabledcolor>grey_a</disabledcolor>
			</control>

		<!-- Default radiobutton -->
		<control type="radiobutton" id="8">
			<description>default RadioButton</description>
				<height>45</height>
				<font>font-22</font>
				<radioposy>3</radioposy>
				<width>1000</width>
				<textoffsetx>75</textoffsetx>
				<align>right</align>
				<textwidth>900</textwidth>
				<textcolor>darkgrey</textcolor>
				<focusedcolor>grey_b</focusedcolor>
				<disabledcolor>grey_a</disabledcolor>
				<texturefocus>dialogs/grey2.png</texturefocus>
				<texturenofocus>dialogs/grey1.png</texturenofocus>
			</control>

		<!-- Default spincontrolex -->
		<control type="spincontrolex" id="9">
			<description>default spincontrolex</description>
				<height>45</height>
				<font>font-22</font>
				<textoffsetx>30</textoffsetx>
				<textwidth>900</textwidth>
				<textcolor>darkgrey</textcolor>
				<focusedcolor>grey_b</focusedcolor>
				<texturefocus>dialogs/grey2.png</texturefocus>
				<texturenofocus>dialogs/grey1.png</texturenofocus>
				<disabledcolor>grey_a</disabledcolor>
				<reverse>yes</reverse>
			</control>

		<!-- Default sliderex -->
		<control type="sliderex" id="13">
			<description>default Slider</description>
				<height>45</height>
				<font>font-20</font>
				<textcolor>darkgrey</textcolor>
				<focusedcolor>$VAR[main_color]</focusedcolor>
				<disabledcolor>grey_a</disabledcolor>
			</control>

		<!-- Button grouplist -->

		<control type="grouplist" id="9001">		
			<posx>700</posx>
			<posy>905</posy>
			<align>left</align>
			<width>700</width>
			<height>65</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>5</onup>
			<ondown>noop</ondown>
			<control type="button" id="28">
				<description>OK Button</description>
				<width>213</width>
				<label>186</label>
			</control>
			<control type="button" id="29">
				<description>Cancel Button</description>
				<width>213</width>
				<label>222</label>
			</control>
			<control type="button" id="50">
				<description>defaults Button</description>
				<width>213</width>
				<label>409</label>		
			</control>
		</control>


	</controls>

</window>
